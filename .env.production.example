# ===========================================
# MeetingMind AI - Production Environment
# ===========================================
# IMPORTANT: Copy this file to .env.production
# NEVER commit .env.production to git!
# ===========================================

# ---------- Application ----------
APP_NAME=MeetingMind AI
APP_ENV=production
DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_SECRET_KEY_IN_PRODUCTION

# ---------- Database (PostgreSQL) ----------
POSTGRES_USER=meetingmind
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=meetingmind
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ---------- Redis ----------
REDIS_PASSWORD=CHANGE_THIS_TO_A_STRONG_REDIS_PASSWORD
REDIS_HOST=redis
REDIS_PORT=6379

# ---------- JWT Authentication ----------
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_JWT_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------- AI Engine ----------
# OpenAI API (for Whisper transcription)
OPENAI_API_KEY=sk-your-openai-api-key-here

# LLM Provider (for meeting analysis)
# Options: openai, anthropic
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-llm-api-key-here
LLM_MODEL=gpt-4o-mini

# Local Whisper model (if not using API)
WHISPER_MODEL=base
USE_LOCAL_WHISPER=False

# ---------- Storage (S3-compatible) ----------
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin_change_this_in_production
S3_SECRET_KEY=minioadmin_secret_change_this_in_production
S3_BUCKET=meetingmind-recordings
S3_REGION=us-east-1

# ---------- Frontend ----------
VITE_API_URL=https://api.meetingmind.ai

# ---------- Backend ----------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ---------- Celery ----------
CELERY_BROKER_URL=redis://:REDIS_PASSWORD@redis:6379/1
CELERY_RESULT_BACKEND=redis://:REDIS_PASSWORD@redis:6379/2

# ---------- Email (for notifications) ----------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@meetingmind.ai

# ---------- Feature Flags ----------
ENABLE_NOISE_CANCELLATION=True
ENABLE_ACCENT_SOFTENING=False
ENABLE_KNOWLEDGE_GRAPH=True
ENABLE_E2E_ENCRYPTION=True

# ---------- Security ----------
# Generate secure keys with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=["https://meetingmind.ai","https://app.meetingmind.ai","https://www.meetingmind.ai"]

# ---------- Monitoring ----------
# Optional: Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# ---------- Logging ----------
LOG_LEVEL=INFO
LOG_FORMAT=json
