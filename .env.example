# ===========================================
# MeetingMind AI - Environment Configuration
# ===========================================

# ---------- Application ----------
APP_NAME=MeetingMind
APP_ENV=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# ---------- Database (PostgreSQL) ----------
POSTGRES_USER=meetingmind
POSTGRES_PASSWORD=meetingmind_password
POSTGRES_DB=meetingmind
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://meetingmind:meetingmind_password@db:5432/meetingmind

# ---------- Redis ----------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ---------- JWT Authentication ----------
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------- AI Engine ----------
# OpenAI Whisper (для транскрипции)
OPENAI_API_KEY=sk-your-openai-api-key

# LLM Provider (для анализа встреч)
# Options: openai, anthropic, local
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-llm-api-key
LLM_MODEL=gpt-4o-mini

# Локальная модель Whisper (если не использовать API)
WHISPER_MODEL=base
USE_LOCAL_WHISPER=False

# ---------- Storage (S3-compatible) ----------
# Для локальной разработки можно использовать MinIO
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=meetingmind-recordings
S3_REGION=us-east-1

# ---------- Frontend ----------
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ---------- Backend ----------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ---------- Celery (Task Queue) ----------
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ---------- Email (для уведомлений) ----------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@meetingmind.ai

# ---------- Desktop Client ----------
DESKTOP_CLIENT_PORT=8080

# ---------- Feature Flags ----------
ENABLE_NOISE_CANCELLATION=True
ENABLE_ACCENT_SOFTENING=False
ENABLE_KNOWLEDGE_GRAPH=True
ENABLE_E2E_ENCRYPTION=True
